<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="oval" android:useLevel="false">
            <solid android:color="@color/black_op_12" />
            <size
                android:width="@dimen/width_button_capture_control"
                android:height="@dimen/height_button_capture_control" />
        </shape>
    </item>
    <item
        android:top="24dp"
        android:bottom="24dp"
        android:left="24dp"
        android:right="24dp">
        <shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/red" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item
        android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp">
        <shape
            android:shape="ring"
            android:useLevel="false"
            android:innerRadius="32dp"
            android:thickness="4dp">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>