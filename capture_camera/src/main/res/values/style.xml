<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ボタン形状 -->
    <style name="ShapeAppearanceOverlay.Shape.SideRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- アイコンボタンスタイル -->
    <style name="SHInspectionSupport.Button.IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconGravity">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">6dp</item>
        <item name="android:insetRight">6dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Shape.SideRounded</item>
    </style>

    <!-- 反転配色アイコンボタンスタイル -->
    <style name="SHInspectionSupport.Button.IconButton.Inverse" parent="SHInspectionSupport.Button.IconButton">
        <item name="iconTint">@color/mtrl_btn_text_color_selector</item>
        <item name="rippleColor">@color/mtrl_btn_ripple_color</item>
        <item name="backgroundTint">@color/black_op_12</item>

    </style>
</resources>